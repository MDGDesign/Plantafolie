@model IEnumerable<Plantafolie.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Liste des clients</h2>

<p>
    <a asp-action="Create">Créer un nouveau client...</a>
</p>
<hr />
<form asp-action="Index" method="post">
    <div class="form-actions no-color">
        <p>
            Rechercher : <input type="text" name="SearchString" />
            <input type="submit" value="Rechercher" class="btn btn-default" />
            <a asp-action="Index">  Retour à la liste entière...</a>
        </p>
    </div>
</form>
<hr />
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courriel)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courriel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId">Editer</a> |
                <a asp-action="Details" asp-route-id="@item.ClientId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId">Supprimer</a> |
                <a asp-action="Historique" asp-route-id="@item.ClientId">Historique</a>
            </td>
        </tr>
}
    </tbody>
</table>
