    ViewData["Title"] = "Recherche";
}
<h2>Recherche dans la catégorie: @Model.CategorieNom</h2>
<ul>
    @foreach (var produits in Model.Produits)
    {
        <li>
            @Html.ActionLink(produits.Nom, "Details", new { id = produits.ProduitID })
